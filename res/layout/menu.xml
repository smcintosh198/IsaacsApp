<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fcb"
    tools:context="cs410.baseapp.MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="@string/app_name_extended"/>
    <Button
        android:id="@+id/playGameButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="@string/menu_item_play_game"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:onClick="playGameButtonOnClick"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:background="@drawable/line"/>
    <Button
        android:id="@+id/addQuestionButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:text="@string/menu_item_add_a_question"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:onClick="addQuestionButtonOnClick"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:background="@drawable/line"/>
    <Button
        android:id="@+id/aboutThisAppButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="220dp"
        android:text="@string/menu_item_About_this_app"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:onClick="aboutThisAppButtonOnClick"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp"
        android:background="@drawable/line"/>
    <Button
        android:id="@+id/quitButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="270dp"
        android:text="@string/menu_item_quit"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:onClick="quitButtonOnClick"/>

</RelativeLayout>
